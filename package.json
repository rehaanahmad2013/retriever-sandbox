{
  "name": "retriever-sandbox",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch --env-file=.env src/index.ts",
    "start": "bun src/index.ts",
    "db:generate": "drizzle-kit generate --config=./db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./db/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=./db/drizzle.config.ts",
    "db:script": "bash db/scripts/_run.sh",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.5",
    "pg": "^8.17.2",
    "zod": "^4.3.6",
    "zod-validation-error": "^5.0.0"
  }
}
